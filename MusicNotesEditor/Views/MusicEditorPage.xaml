<Page x:Class="MusicNotesEditor.Views.MusicEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicNotesEditor.Views"
      xmlns:ManufakturaControls="clr-namespace:Manufaktura.Controls.WPF;assembly=Manufaktura.Controls.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MusicEditorPage">

    <Grid PreviewKeyDown="HandleKeyDown" x:Name="mainGrid">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Menu Grid.Row="0" Background="{StaticResource BrushLightest}">
            <Menu.InputBindings>
                <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding OpenCommand}"/>
                <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveCommand}"/>
                <KeyBinding Key="S" Modifiers="Ctrl+Shift" Command="{Binding SaveAsCommand}"/>
            </Menu.InputBindings>
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="OpenMusicXML"/>
                <MenuItem Header="Save" Click="SaveMusicXML"/>
                <MenuItem Header="Save As" Click="SaveNewMusicXML"/>
                <Separator/>
                <MenuItem Header="Export">
                    <MenuItem Header="Export to PDF" Click="ExportToPdf"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit" Click="BackToMenu" />
            </MenuItem>
        </Menu>


        <Grid Grid.Row="1" Background="{StaticResource BrushLightest}" Height="50">
            <Grid.ColumnDefinitions>  
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ToolBarTray Grid.Column="0"
                         VerticalAlignment="Center" 
                         Background="Transparent">
                <ToolBar x:Name="NoteToolbar"
                    Background="Transparent" 
                    BorderThickness="0"
                    FontFamily="{StaticResource Polihymnia}"
                    FontSize="24"
                    Padding="10 0 10 0"
                    Visibility="{Binding IsNothingSelected,
                                  Converter={StaticResource BoolToVisibility}}"
                    >
                    <ToolBar.Resources>
                        <Style x:Key="ToolBarButtonStyle" TargetType="ToggleButton">
                            <Setter Property="MaxHeight" Value="36"/>
                            <Setter Property="MinWidth" Value="30"/>
                            <Setter Property="VerticalAlignment" Value="Top"/>
                            <Setter Property="Background" Value="{StaticResource BrushLightest}"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Margin" Value="4 0 0 0"/>
                            <Setter Property="Padding" Value="0 4 0 0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4"
                                        >
                                            <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{TemplateBinding Content}"
                                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                                Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!-- Hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource BrushLight}"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="Black"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <!-- Selected / Checked -->
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource BrushPrimary}"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToolBar.Resources>
                </ToolBar>
                <ToolBar x:Name="AccidentalsToolbar"
                Background="Transparent" 
                BorderThickness="0"
                FontFamily="{StaticResource Polihymnia}"
                FontSize="24"
                Padding="10 0 10 0"
                Visibility="{Binding IsNothingSelected,
                              Converter={StaticResource BoolToVisibility}}"
                />
                <ToolBar x:Name="AccidentalsSelectToolbar"
                Background="Transparent" 
                BorderThickness="0"
                FontFamily="{StaticResource Polihymnia}"
                FontSize="24"
                Padding="10 0 10 0"
                Visibility="{Binding IsNoteOrRestSelected,
                              Converter={StaticResource BoolToVisibility}}"
                />
            </ToolBarTray>

            <TextBlock Grid.Column="1"
               Text="{Binding ScoreFileName}"
               Foreground="{StaticResource BrushPrimary}"
               FontWeight="Bold"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontSize="16"/>

            <StackPanel Grid.Column="2"
            Orientation="Horizontal"
                        VerticalAlignment="Center" 
                        >
                <Button Name="playButton" Content="  Play  " Click="PlayButton_Click" Margin="4" MinHeight="24"/>
                <Button Content="  Parts  " Margin="4" MinHeight="24"/>
            </StackPanel>
        </Grid>


        <ScrollViewer Grid.Row="2"
                  VerticalScrollBarVisibility="Auto"
                  Margin="0,10,0,0">

            <ManufakturaControls:NoteViewer
                Background="White"
                x:Name="noteViewer" 
                Margin="30"
                Padding="100,120,15,40"
                BorderThickness="1"
                BorderBrush="Black"
                IsSelectable="False"
                RenderingMode="SinglePage"
                CurrentPage="{Binding CurrentPageIndex}"
                ZoomFactor="1.5"
                ScoreSource="{Binding Data}" 
                Loaded="NoteViewer_Loaded"
            />
        </ScrollViewer>

    </Grid>

</Page>