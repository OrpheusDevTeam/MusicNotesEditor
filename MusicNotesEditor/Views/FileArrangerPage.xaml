<Page x:Class="MusicNotesEditor.Views.FileArrangerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Arrange Files - Reorder PDF Pages and Images">
    <Viewbox Stretch="Fill">
        <Grid Width="1200" Height="700" Background="#FF353242">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <!-- 30% for sidebar -->
                <ColumnDefinition Width="7*"/>
                <!-- 70% for content -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar Toolbar -->
            <Border Grid.Column="0" Background="#FF2A2438" Margin="10" CornerRadius="8">
                <StackPanel Orientation="Vertical" Margin="15">
                    <TextBlock Text="File Arranger" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>

                    <Button x:Name="btnSelectFiles" Content="Select Files" Click="BtnSelectFiles_Click"
                            Height="35" Margin="0,0,0,10"
                            Background="#FF4A4365"
                            Foreground="White"
                            BorderBrush="#FF6B5B95"/>

                    <Button x:Name="btnImportMusicXml" Content="Import MusicXML" Click="BtnImportMusicXml_Click"
                            Height="35" Margin="0,0,0,10"
                            Background="#FF4A4365"
                            Foreground="White"
                            BorderBrush="#FF6B5B95"/>

                    <Rectangle Height="1" Margin="0,10" Fill="#FF6B5B95" Opacity="0.5"/>

                    <Button x:Name="btnMoveUp" Content="Move Up" Click="BtnMoveUp_Click"
                            Height="35" Margin="0,0,0,8"
                            Background="#FF4A4365"
                            Foreground="White"
                            BorderBrush="#FF6B5B95"/>

                    <Button x:Name="btnMoveDown" Content="Move Down" Click="BtnMoveDown_Click"
                            Height="35" Margin="0,0,0,8"
                            Background="#FF4A4365"
                            Foreground="White"
                            BorderBrush="#FF6B5B95"/>

                    <Button x:Name="btnRemove" Content="Remove" Click="BtnRemove_Click"
                            Height="35" Margin="0,0,0,8"
                            Background="#FF4A4365"
                            Foreground="White"
                            BorderBrush="#FF6B5B95"/>

                    <Button x:Name="btnClearAll" Content="Clear All" Click="BtnClearAll_Click"
                            Height="35" Margin="0,0,0,20"
                            Background="#FFD32F2F"
                            Foreground="White"
                            BorderBrush="#FFB71C1C"/>

                    <Rectangle Height="1" Margin="0,10" Fill="#FF6B5B95" Opacity="0.5"/>

                    <!-- Status moved to sidebar -->
                    <TextBlock x:Name="lblFileCount" Foreground="LightGray" FontSize="12" 
                               Margin="0,10,0,5" TextWrapping="Wrap" HorizontalAlignment="Center"/>

                    <Button x:Name="btnBack" Content="Back to Menu" Click="BtnBack_Click"
                            Height="35" Margin="0,10,0,0"
                            Background="Transparent"
                            Foreground="#FF6B5B95"
                            BorderBrush="#FF6B5B95"
                            BorderThickness="1"/>
                </StackPanel>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- File List -->
                <Border Grid.Row="0" Background="#FF131020" CornerRadius="8" Padding="1">
                    <ListView x:Name="filesListView"
                              AllowDrop="True"
                              Background="Transparent"
                              PreviewDragOver="FilesListView_PreviewDragOver"
                              Drop="FilesListView_Drop"
                              BorderThickness="0"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.View>
                            <GridView>
                                <!-- Preview Column - 20% (161px) -->
                                <GridViewColumn Width="161">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Preview" 
                                                     Foreground="White"
                                                     Background="#FF4A4365"
                                                     BorderBrush="#FF6B5B95"
                                                     BorderThickness="0,0,0,2"
                                                     Padding="8,4"
                                                     FontWeight="SemiBold"
                                                     HorizontalContentAlignment="Center"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Click="PreviewButton_Click"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="2"
                                            ToolTip="Click to preview this file"
                                            Cursor="Hand"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Height="80">
                                                <Button.Content>
                                                    <Image Source="{Binding Thumbnail}"
                                                   Width="100"
                                                   Height="70"
                                                   Stretch="Uniform"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                                </Button.Content>
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Order Column - 10% (81px) -->
                                <GridViewColumn Width="81" DisplayMemberBinding="{Binding Order}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="No." 
                                                     Foreground="White"
                                                     Background="#FF4A4365"
                                                     BorderBrush="#FF6B5B95"
                                                     BorderThickness="0,0,0,2"
                                                     Padding="8,4"
                                                     FontWeight="SemiBold"
                                                     HorizontalContentAlignment="Center"/>
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <!-- Size Column - 10% (81px) -->
                                <GridViewColumn Width="90" DisplayMemberBinding="{Binding FileSize}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Size" 
                                                     Foreground="White"
                                                     Background="#FF4A4365"
                                                     BorderBrush="#FF6B5B95"
                                                     BorderThickness="0,0,0,2"
                                                     Padding="8,4"
                                                     FontWeight="SemiBold"
                                                     HorizontalContentAlignment="Center"/>
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <!-- Type Column - 20% (161px) -->
                                <GridViewColumn Width="161" DisplayMemberBinding="{Binding FileType}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Type" 
                                                     Foreground="White"
                                                     Background="#FF4A4365"
                                                     BorderBrush="#FF6B5B95"
                                                     BorderThickness="0,0,0,2"
                                                     Padding="8,4"
                                                     FontWeight="SemiBold"
                                                     HorizontalContentAlignment="Center"/>
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <!-- File Name Column - 40% (322px) -->
                                <GridViewColumn Width="322" DisplayMemberBinding="{Binding FileName}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="File Name" 
                                                     Foreground="White"
                                                     Background="#FF4A4365"
                                                     BorderBrush="#FF6B5B95"
                                                     BorderThickness="0,0,0,2"
                                                     Padding="8,4"
                                                     FontWeight="SemiBold"
                                                     HorizontalContentAlignment="Center"/>
                                    </GridViewColumn.Header>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>

                        <!-- ListView Resources for ScrollBar and Text Alignment -->
                        <ListView.Resources>
                            <!-- Center aligned text for all GridView cells -->
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="8,4"/>
                            </Style>

                            <!-- Disable column resizing and reordering -->
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="GridViewColumnHeader">
                                            <Grid>
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                      RecognizesAccessKey="True"/>
                                                </Border>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <!-- Working ScrollBar Style - Vertical Only -->
                            <Style TargetType="ScrollBar">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="Orientation" Value="Vertical">
                                        <Setter Property="Width" Value="12"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ScrollBar">
                                                    <Grid>
                                                        <Track x:Name="PART_Track" 
                                                               IsDirectionReversed="true">
                                                            <Track.Thumb>
                                                                <Thumb Background="#FF6B5B95" 
                                                                       Opacity="0.7">
                                                                    <Thumb.Style>
                                                                        <Style TargetType="Thumb">
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="Thumb">
                                                                                        <Border CornerRadius="6" 
                                                                                                Background="{TemplateBinding Background}"
                                                                                                BorderThickness="0"/>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="Background" Value="#FF8B7BA5"/>
                                                                                    <Setter Property="Opacity" Value="1"/>
                                                                                </Trigger>
                                                                                <Trigger Property="IsDragging" Value="True">
                                                                                    <Setter Property="Background" Value="#FF9B8BB5"/>
                                                                                    <Setter Property="Opacity" Value="1"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Thumb.Style>
                                                                </Thumb>
                                                            </Track.Thumb>
                                                        </Track>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <!-- Remove the corner filler by styling ScrollViewer -->
                            <Style TargetType="ScrollViewer">
                                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                                <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ScrollViewer">
                                            <Grid Background="{TemplateBinding Background}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <ScrollContentPresenter Grid.Column="0" 
                                                                        Grid.Row="0"
                                                                        Margin="{TemplateBinding Padding}"
                                                                        Content="{TemplateBinding Content}"
                                                                        ContentTemplate="{TemplateBinding ContentTemplate}"/>

                                                <ScrollBar x:Name="PART_VerticalScrollBar"
                                                           Grid.Column="1"
                                                           Grid.Row="0"
                                                           Orientation="Vertical"
                                                           Value="{TemplateBinding VerticalOffset}"
                                                           Maximum="{TemplateBinding ScrollableHeight}"
                                                           ViewportSize="{TemplateBinding ViewportHeight}"
                                                           Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.Resources>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Height" Value="90"/>
                                <Setter Property="Padding" Value="5"/>
                                <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown"/>
                                <EventSetter Event="PreviewMouseMove" Handler="ListViewItem_PreviewMouseMove"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF4A4365"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF6B5B95"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="btnCancel" Content="Cancel" Click="BtnCancel_Click"
                            Width="100" Height="35" Margin="0,0,10,0"
                            Background="Transparent"
                            Foreground="#FF6B5B95"
                            BorderBrush="#FF6B5B95"
                            BorderThickness="1"/>

                    <Button x:Name="btnProcess" Content="Process" Click="BtnProcess_Click"
                            Width="100" Height="35"
                            Background="#FF4A4365"
                            Foreground="White"
                            BorderBrush="#FF6B5B95"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Viewbox>
</Page>