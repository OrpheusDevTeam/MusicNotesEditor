<Page x:Class="MusicNotesEditor.Views.FileArrangerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Arrange Files - Reorder PDF Pages and Images">
    <Viewbox Stretch="Fill">
        <Grid Width="1200" Height="700">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/background.png" Stretch="UniformToFill"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <!-- 30% for sidebar -->
                <ColumnDefinition Width="7*"/>
                <!-- 70% for content -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar Toolbar -->
            <Border Grid.Column="0" Background="#FF2A2438" Margin="10" CornerRadius="8">
                <StackPanel Orientation="Vertical" Margin="15">

                    <Button x:Name="btnSelectFiles" Content="Select Files" Click="BtnSelectFiles_Click"
                            Height="30" Margin="0,10,0,10"
                            Background="#FF4A4365"
                            Foreground="White"
                            BorderBrush="#FF6B5B95"/>

                    <Button x:Name="btnImportMusicXml" Content="Import MusicXML" Click="BtnImportMusicXml_Click"
                            Height="30" Margin="0,0,0,10"
                            Background="#FF4A4365"
                            Foreground="White"
                            BorderBrush="#FF6B5B95"/>

                    <Rectangle Height="1" Margin="0,0,0,8" Fill="#FF6B5B95" Opacity="0.5"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnMoveUp" Content="Move Up" Click="BtnMoveUp_Click"
                            Height="30" Margin="0,0,4,0"
                            Grid.Column="0"
                            Background="#FF4A4365"
                            Foreground="White"
                            BorderBrush="#FF6B5B95"/>

                        <Button x:Name="btnMoveDown" Content="Move Down" Click="BtnMoveDown_Click"
                            Height="30" Margin="4,0,0,0"
                            Grid.Column="1"
                            Background="#FF4A4365"
                            Foreground="White"
                            BorderBrush="#FF6B5B95"/>
                    </Grid>
                    

                    <Button x:Name="btnRemove" Content="Remove" Click="BtnRemove_Click"
                            Height="30" Margin="0,0,0,8"
                            Background="#FF4A4365"
                            Foreground="White"
                            BorderBrush="#FF6B5B95"/>

                    <Button x:Name="btnClearAll" Content="Clear All" Click="BtnClearAll_Click"
                            Height="30" Margin="0,0,0,8"
                            Background="#FFD32F2F"
                            Foreground="White"
                            BorderBrush="#FFB71C1C"/>

                    <Rectangle Height="1" Fill="#FF6B5B95" Opacity="0.5"/>

                    <!-- Status moved to sidebar -->
                    <Frame x:Name="QR_Frame"  
                       NavigationUIVisibility="Hidden"
                       Background="#2D2D30"
                       BorderThickness="0"/>
                </StackPanel>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- File List -->
                <Border Grid.Row="0" Background="#FF131020" CornerRadius="8" Padding="1">
                    <Grid Background="#FF131020">
                        <!-- Main content area -->
                        <ScrollViewer x:Name="ListViewScrollViewer"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Background="Transparent">
                            <ScrollViewer.Resources>
                                <!-- Working ScrollBar Style - Vertical Only -->
                                <Style TargetType="ScrollBar">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="Orientation" Value="Vertical">
                                            <Setter Property="Width" Value="12"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ScrollBar">
                                                        <Grid>
                                                            <Track x:Name="PART_Track" 
                                                                   IsDirectionReversed="true">
                                                                <Track.Thumb>
                                                                    <Thumb Background="#FF6B5B95" 
                                                                           Opacity="0.7">
                                                                        <Thumb.Style>
                                                                            <Style TargetType="Thumb">
                                                                                <Setter Property="Template">
                                                                                    <Setter.Value>
                                                                                        <ControlTemplate TargetType="Thumb">
                                                                                            <Border CornerRadius="6" 
                                                                                                    Background="{TemplateBinding Background}"
                                                                                                    BorderThickness="0"/>
                                                                                        </ControlTemplate>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                                <Style.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="#FF8B7BA5"/>
                                                                                        <Setter Property="Opacity" Value="1"/>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsDragging" Value="True">
                                                                                        <Setter Property="Background" Value="#FF9B8BB5"/>
                                                                                        <Setter Property="Opacity" Value="1"/>
                                                                                    </Trigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Thumb.Style>
                                                                    </Thumb>
                                                                </Track.Thumb>
                                                            </Track>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ScrollViewer.Resources>

                            <ListView x:Name="filesListView"
                                      AllowDrop="True"
                                      Background="Transparent"
                                      PreviewDragOver="FilesListView_PreviewDragOver"
                                      Drop="FilesListView_Drop"
                                      BorderThickness="0"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                      Width="794">
                                <!-- Fixed width to account for scrollbar -->
                                <ListView.View>
                                    <GridView>
                                        <!-- Preview Column - 20% (159px) -->
                                        <GridViewColumn Width="159">
                                            <GridViewColumn.Header>
                                                <GridViewColumnHeader Content="Preview" 
                                                             Foreground="White"
                                                             Background="#FF4A4365"
                                                             BorderBrush="#FF6B5B95"
                                                             BorderThickness="1"
                                                             Padding="8,6"
                                                             FontWeight="SemiBold"
                                                             HorizontalContentAlignment="Center"
                                                             Margin="2,4,2,4"/>
                                            </GridViewColumn.Header>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Click="PreviewButton_Click"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="2"
                                                    ToolTip="Click to preview this file"
                                                    Cursor="Hand"
                                                    HorizontalContentAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Height="80">
                                                        <Button.Content>
                                                            <Image Source="{Binding Thumbnail}"
                                                           Width="100"
                                                           Height="70"
                                                           Stretch="Uniform"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                                        </Button.Content>
                                                    </Button>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <!-- Order Column - 10% (79px) -->
                                        <GridViewColumn Width="79" DisplayMemberBinding="{Binding Order}">
                                            <GridViewColumn.Header>
                                                <GridViewColumnHeader Content="No." 
                                                             Foreground="White"
                                                             Background="#FF4A4365"
                                                             BorderBrush="#FF6B5B95"
                                                             BorderThickness="1"
                                                             Padding="8,6"
                                                             FontWeight="SemiBold"
                                                             HorizontalContentAlignment="Center"
                                                             Margin="2,4,2,4"/>
                                            </GridViewColumn.Header>
                                        </GridViewColumn>

                                        <!-- Size Column - 10% (79px) -->
                                        <GridViewColumn Width="79" DisplayMemberBinding="{Binding FileSize}">
                                            <GridViewColumn.Header>
                                                <GridViewColumnHeader Content="Size" 
                                                             Foreground="White"
                                                             Background="#FF4A4365"
                                                             BorderBrush="#FF6B5B95"
                                                             BorderThickness="1"
                                                             Padding="8,6"
                                                             FontWeight="SemiBold"
                                                             HorizontalContentAlignment="Center"
                                                             Margin="2,4,2,4"/>
                                            </GridViewColumn.Header>
                                        </GridViewColumn>

                                        <!-- Type Column - 20% (159px) -->
                                        <GridViewColumn Width="159" DisplayMemberBinding="{Binding FileType}">
                                            <GridViewColumn.Header>
                                                <GridViewColumnHeader Content="Type" 
                                                             Foreground="White"
                                                             Background="#FF4A4365"
                                                             BorderBrush="#FF6B5B95"
                                                             BorderThickness="1"
                                                             Padding="8,6"
                                                             FontWeight="SemiBold"
                                                             HorizontalContentAlignment="Center"
                                                             Margin="2,4,2,4"/>
                                            </GridViewColumn.Header>
                                        </GridViewColumn>

                                        <!-- File Name Column - 40% (318px) -->
                                        <GridViewColumn Width="318" DisplayMemberBinding="{Binding FileName}">
                                            <GridViewColumn.Header>
                                                <GridViewColumnHeader Content="File Name" 
                                                             Foreground="White"
                                                             Background="#FF4A4365"
                                                             BorderBrush="#FF6B5B95"
                                                             BorderThickness="1"
                                                             Padding="8,6"
                                                             FontWeight="SemiBold"
                                                             HorizontalContentAlignment="Center"
                                                             Margin="2,4,2,4"/>
                                            </GridViewColumn.Header>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>

                                <!-- ListView Resources for ScrollBar and Text Alignment -->
                                <ListView.Resources>
                                    <!-- Center aligned text for all GridView cells -->
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8,4"/>
                                    </Style>

                                    <!-- Floating rounded column headers -->
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="GridViewColumnHeader">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Padding="{TemplateBinding Padding}"
                                                            Margin="{TemplateBinding Margin}"
                                                            CornerRadius="12">
                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                          RecognizesAccessKey="True"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.Resources>

                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Height" Value="90"/>
                                        <Setter Property="Padding" Value="5"/>
                                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown"/>
                                        <EventSetter Event="PreviewMouseMove" Handler="ListViewItem_PreviewMouseMove"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF4A4365"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#FF6B5B95"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="btnCancel" Content="Cancel" Click="BtnCancel_Click"
                            Width="100" Height="35" Margin="0,0,10,0"
                            Background="Transparent"
                            Foreground="#FF6B5B95"
                            BorderBrush="#FF6B5B95"
                            BorderThickness="1"/>

                    <Button x:Name="btnProcess" Content="Process" Click="BtnProcess_Click"
                            Width="100" Height="35"
                            Background="#FF4A4365"
                            Foreground="White"
                            BorderBrush="#FF6B5B95"/>
                </StackPanel>
            </Grid>

            <!-- Loading Overlay - Initially Hidden -->
            <Grid x:Name="LoadingOverlay" 
      Grid.ColumnSpan="2"
      Panel.ZIndex="999"
      Opacity="0"
      Visibility="Collapsed">

                <!-- Semi-transparent background with blur effect -->
                <Border x:Name="BlurBackground" 
            Background="#CC000000" 
            Opacity="0.9">
                    <Border.Effect>
                        <BlurEffect Radius="5"/>
                    </Border.Effect>
                </Border>

                <!-- Loading Content (NO blur effect here) -->
                <Grid HorizontalAlignment="Center" 
          VerticalAlignment="Center">
                    <Border Background="#FF2A2438" 
                CornerRadius="15"
                Padding="30"
                Width="300"
                Height="200">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="5" 
                                  BlurRadius="15" 
                                  Opacity="0.5"
                                  Color="#FF000000"/>
                        </Border.Effect>

                        <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                            <!-- Loading Spinner -->
                            <ProgressBar x:Name="LoadingProgressBar"
                            IsIndeterminate="True"
                            Height="8"
                            Width="200"
                            Margin="0,0,0,20"
                            Background="Transparent">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#FF4A4365" Offset="0"/>
                                        <GradientStop Color="#FF6B5B95" Offset="0.5"/>
                                        <GradientStop Color="#FF4A4365" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>

                            <!-- Loading Text -->
                            <TextBlock x:Name="LoadingText"
                          Text="Processing Files..."
                          Foreground="White"
                          FontSize="16"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"
                          TextOptions.TextFormattingMode="Display"
                          TextOptions.TextRenderingMode="ClearType"/>

                            <!-- Optional: Progress Percentage -->
                            <TextBlock x:Name="ProgressText"
                          Text=""
                          Foreground="#FFAAAAAA"
                          FontSize="12"
                          HorizontalAlignment="Center"
                          TextOptions.TextFormattingMode="Display"
                          TextOptions.TextRenderingMode="ClearType"/>

                            <!-- Optional: Cancel Button -->
                            <Button x:Name="btnCancelProcessing"
                        Content="Cancel"
                        Width="80"
                        Height="25"
                        Margin="0,15,0,0"
                        Background="Transparent"
                        Foreground="#FF6B5B95"
                        BorderBrush="#FF6B5B95"
                        BorderThickness="1"
                        Click="BtnCancelProcessing_Click"
                        Visibility="Collapsed"
                        FontSize="12"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Viewbox>
</Page>