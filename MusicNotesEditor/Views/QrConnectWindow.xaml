<Window x:Class="MusicNotesEditor.Views.QrConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect Phone"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="#111"
        FontFamily="{StaticResource BeVietnam}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Viewbox Stretch="Uniform" Margin="30">
            <Border  Width="450"
                     Height="600"
                     Background="#131020"
                     BorderBrush="#2f2e3a"
                     BorderThickness="3"
                     CornerRadius="8"
                     Padding="20">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Text="CONNECT DEVICE"
                               Foreground="White"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0 0 0 10"/>

                    <!-- QR section -->
                    <Border Grid.Row="1"
                            Background="#1b182b"
                            BorderBrush="#292834"
                            BorderThickness="2"
                            CornerRadius="10"
                            Padding="20"
                            Margin="0 10">
                        <Image x:Name="QrImg"
                               Width="250"
                               Height="250"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>

                    <!-- Steps -->
                    <StackPanel Grid.Row="2" Margin="0 20 0 0">
                        <TextBlock Text="1. Connect phone and computer to the same Wi-Fi"
                                   Foreground="#9a8cff"
                                   FontSize="14"
                                   Margin="0 5"/>
                        <TextBlock Text="2. Open Eurydice app on your phone"
                                   Foreground="#9a8cff"
                                   FontSize="14"
                                   Margin="0 5"/>
                        <TextBlock Text="3. Scan the QR code"
                                   Foreground="#9a8cff"
                                   FontSize="14"
                                   Margin="0 5"/>
                        <TextBlock Text="4. Send the image using app"
                                   Foreground="#9a8cff"
                                   FontSize="14"
                                   Margin="0 5"/>
                    </StackPanel>

                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</Window>
