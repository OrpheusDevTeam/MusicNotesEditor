<Page x:Class="MusicNotesEditor.Views.CreditsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicNotesEditor.Views"
      xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage"
      FontFamily="{StaticResource BeVietnam}">


    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>

        <!-- ViewBox wraps the entire Border -->
        <Viewbox Grid.Column="1" Grid.Row="1" Stretch="Uniform">
            <Border 
                Width="675"
                Height="450"
                BorderBrush="#FF2f2e3a" 
                Background="#FF131020"
                BorderThickness="3"
                CornerRadius="8"
                Padding="20">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.2*"/>
                    </Grid.RowDefinitions>

                    <TextBlock 
                        Grid.Row="0"  
                        FontSize="50" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Foreground="White"
                        Text="Credits">
                    </TextBlock>

                    <StackPanel Grid.Row="1">
                        <TextBlock FontSize="25" Margin="20,0,0,0" Foreground="White">
                            <Run Text="• "/>
                            <Run Text="First list item"/>
                        </TextBlock>
                        <TextBlock FontSize="25" Margin="20,0,0,0" Foreground="White">
                            <Run Text="• "/>
                            <Run Text="Second list item"/>
                        </TextBlock>
                        <TextBlock FontSize="25" Margin="20,0,0,0" Foreground="White">
                            <Run Text="• "/>
                            <Run Text="Third list item"/>
                        </TextBlock>
                    </StackPanel>

                    <Button Grid.Row="2" x:Name="btnReturn" Content="Return" Click="ReturnToMenu"
                        Width="100" Height="35" Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        Background="#FF4A4365"
                        Foreground="White"
                        BorderBrush="#FF6B5B95"
                        BorderThickness="1"/>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</Page>