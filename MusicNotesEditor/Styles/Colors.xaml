<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="ColorLightest">#FFE4B7E5</Color>
    <Color x:Key="ColorLight">#FFB288C0</Color>
    <Color x:Key="ColorMedium">#FF7E5A9B</Color>
    <Color x:Key="ColorDark">#FF63458A</Color>
    <Color x:Key="ColorPrimary">#FF9A48D0</Color>

    <SolidColorBrush x:Key="BrushLightest" Color="{StaticResource ColorLightest}" />
    <SolidColorBrush x:Key="BrushLight" Color="{StaticResource ColorLight}" />
    <SolidColorBrush x:Key="BrushMedium" Color="{StaticResource ColorMedium}" />
    <SolidColorBrush x:Key="BrushDark" Color="{StaticResource ColorDark}" />
    <SolidColorBrush x:Key="BrushPrimary" Color="{StaticResource ColorPrimary}" />

</ResourceDictionary>